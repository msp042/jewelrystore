<div class="card mb-3">
  <h2 class="card-header h4">
    Necklace #<%= necklace.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Category</dt>
      <!-- Display category_id start -->
      <dd><%= necklace.category_id %></dd>
      <!-- Display category_id end -->

      <dt>Title</dt>
      <!-- Display title start -->
      <dd><%= necklace.title %></dd>
      <!-- Display title end -->

      <dt>Price</dt>
      <!-- Display price start -->
      <dd><%= necklace.price %></dd>
      <!-- Display price end -->

      <dt>Image</dt>
      <!-- Display image start -->
      <dd>
        <%= cl_image_tag @necklace.image, class: "img-fluid" %>
      </dd>
      <!-- Display image end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back necklace, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link necklace start -->
      <div class="col">
        <%= link_to edit_necklace_url(necklace), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link necklace end -->

      <!-- Delete link necklace start -->
      <div class="col">
        <%= link_to necklace, method: :delete, data: { confirm: "Do you really want to delete this necklace?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link necklace end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(necklace.updated_at) %> ago
  </div>
</div>
