<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Necklaces

    <a data-toggle="collapse" href="#category_necklaces_new_form">
      Add necklace
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @category.necklaces.each do |necklace| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to necklace, necklace %>

        <%= link_to necklace, method: :delete, data: { confirm: "Do you really want to delete this necklace" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="category_necklaces_new_form">
        <%= render partial: "categories/category_necklaces_new_form" %>
      </div>
    </div>

  </ul>
</div>
